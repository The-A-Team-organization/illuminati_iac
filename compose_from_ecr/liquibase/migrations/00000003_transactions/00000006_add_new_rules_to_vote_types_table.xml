        <insert tableName="vote_types">
            <column name="vote_type" value="BAN_USER"/>
            <column name="user_role" value="Mason"/>
        </insert>

        <insert tableName="vote_types">
            <column name="vote_type" value="BAN_USER"/>
            <column name="user_role" value="SilverMason"/>
        </insert>

        <insert tableName="vote_types">
            <column name="vote_type" value="BAN_USER"/>
