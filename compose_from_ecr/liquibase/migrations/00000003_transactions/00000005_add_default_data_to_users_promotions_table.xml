<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="00000005_add_default_data_to_users_promotions_table" author="Taras Andreiko">
        <insert tableName="users_promotions">
            <column name = "user_id" value = "1"/>
            <column name = "date_of_last_promotion" valueDate = "CURDATE()"/>
            <column name = "is_promote_requested" valueBoolean = "false"/>
        </insert>

        <rollback>
            <delete tableName = "users_promotions">
                <where>user_id = 1</where>
            </delete>
        </rollback>
    </changeSet>

</databaseChangeLog>
