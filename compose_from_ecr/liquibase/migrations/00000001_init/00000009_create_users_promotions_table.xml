<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.15.xsd">

    <changeSet id="00000009_create_users_promotions_table" author="Taras Andreiko">

        <createTable tableName="users_promotions">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_users_promotions_id"/>
            </column>

            <column name="user_id" type="BIGINT">
                <constraints nullable="false" unique="true" foreignKeyName="fk_users_promotions_user_id" references="users(id)"/>
            </column>

            <column name="date_of_last_promotion" type="DATE">
                <constraints nullable="false"/>
            </column>

            <column name="is_promote_requested" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <rollback>
            <dropTable tableName="users_promotions"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
