<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog 
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.15.xsd">

    <changeSet id="00000003_create_users_ip_table" author="Taras Andreiko">
        <createTable tableName="users_ip">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_users_ip_id"/>
            </column>

            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="ip_address" type="TEXT">
                <constraints nullable="false" unique="true"/>
            </column>

        </createTable>


        <rollback>
            <dropTable tableName="users_ip"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
